<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:weightSum="1"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Notification tone"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:padding="15dp"
        android:id="@+id/textView" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textColor="@android:color/black"
        android:id="@+id/listview_notification_tones_list"
        android:layout_weight="1"></ListView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/notification_tones_ok_button"
            android:layout_margin="10dp"
            android:text="OK"
            android:textColor="@android:color/black"
            android:background="@android:color/transparent"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/notification_tones_cancel_button"
            android:layout_alignParentTop="true"
            android:textColor="@android:color/black"
            android:background="@android:color/transparent"
            android:layout_margin="10dp"
            android:text="CANCEL"
            android:layout_toLeftOf="@+id/notification_tones_ok_button"
            android:layout_toStartOf="@+id/notification_tones_ok_button" />
    </RelativeLayout>
</LinearLayout><!-- From: file:/Users/VenuNalla/Projects/Android%20Projects/HowzIsThisBuddy/app/src/main/res/layout/layout_notification_ringtone_view.xml -->