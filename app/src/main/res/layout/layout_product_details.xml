<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginBottom="3dp" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/img_product_detail_picture"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="start"
                android:src="@drawable/shoe_big"
                android:background="@drawable/img_background" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="3dp" >

            <TextView
                android:id="@+id/txt_product_detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:text="Jumba Shoes"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

            <TextView
                android:id="@+id/txt_product_detail_product_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product ID:X233343434"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:textColor="#5A5A5A" 
                android:visibility="gone"/>

            <TextView
                android:id="@+id/txt_product_detail_product_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:lines="3"
                android:maxLines="3"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:text="The jumba shoes look like fun but means business Wear it byself more>"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:textColor="#5A5A5A" />

            <TextView
                android:id="@+id/txt_product_detail_selfie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/color_button_bg"
                android:drawableLeft="@drawable/camera"
                android:drawableStart="@drawable/camera"
                android:gravity="center"
                android:layout_marginTop="3dp"
                android:paddingBottom="2dp"
                android:paddingEnd="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="2dp"
                android:text=" Capture Selfie"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />
        <TextView
                android:id="@+id/txt_product_detail_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/color_button_bg"
                android:padding="5dp"
                android:layout_marginTop="3dp"
                android:text="Now: $49.99"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2" 
        android:visibility="gone">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal"
                android:weightSum="3" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/img_product_detail_picture_first"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/shoe_thumb_first"
                        android:visibility="invisible" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/img_product_detail_picture_second"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="invisible"
                    android:src="@drawable/shoe_thumb_second" />

                <ImageView
                    android:id="@+id/img_product_detail_picture_third"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/shoe_thumb_third"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txt_product_detail_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginEnd="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/color_textview_bg"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="Size: 11"
                    android:visibility="invisible" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/color_textview_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/txt_product_detail_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Color" />

                    <TextView
                        android:id="@+id/txt_product_detail_first_color_code"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginStart="2dp"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/txt_product_detail_second_color_code"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/txt_product_detail_thord_color_code"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginRight="2dp"
                        android:visibility="invisible" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_product_detail_product_origin_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="Orig: $85.00"
                android:visibility="gone"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />

            
        </LinearLayout>
    </LinearLayout>

</LinearLayout>