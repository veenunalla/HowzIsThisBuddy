<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:weightSum="10" >

    <TextView
        android:id="@+id/txt_opinion_received_responded_contact_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3.5"
        android:paddingLeft="5dp"
        android:paddingStart="5dp"
        android:gravity="center_vertical"
        android:text="Steve Robinson" />

    <TextView
        android:id="@+id/txt_opinion_received_responded_date"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2.5"
        android:gravity="center_vertical" />

    <ImageView
        android:id="@+id/img_opinion_received_responded_status"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/small_like" />

    <TextView
        android:id="@+id/txt_opinion_received_responded_comment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center_vertical|end"
        android:drawableRight="@drawable/list_arrow"
        android:text="Comment" />

</LinearLayout>