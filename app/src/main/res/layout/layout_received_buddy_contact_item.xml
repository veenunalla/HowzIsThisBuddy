<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/img_received_buddy_contact_photo"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_centerVertical="true"
        android:src="@drawable/person_icon" />

    <TextView
        android:id="@+id/txt_received_buddy_contact_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/img_received_buddy_contact_photo"
        android:layout_toRightOf="@+id/img_received_buddy_contact_photo"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:text="Steve Robinson" />

    <TextView
        android:id="@+id/txt_received_buddy_contact_phone"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/check_received_buddy_contact"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/check_received_buddy_contact"
        android:gravity="center_vertical"
        android:text="123-456-7890" />

    <CheckBox
        android:id="@+id/check_received_buddy_contact"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical" />

</RelativeLayout>