<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.pivotaldesign.howzthisbuddy.Controllers.PopupViewActivity">
    <include layout="@layout/layout_dialog_product_details"
        android:id="@+id/include" />      <TextView
    android:id="@+id/txt_response_your_opinion_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/str_opinion_response_your_opinion"
    android:layout_below="@+id/include"
    android:layout_alignLeft="@+id/include"
    android:layout_alignStart="@+id/include" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/include"
        android:layout_alignStart="@+id/include"
        android:id="@+id/relativeLayout">

    </RelativeLayout>

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/str_opinion_response_describe_hint"
        android:lines="3"
        android:minLines="3"
        android:scrollbars="vertical"
        android:inputType="textMultiLine"
        android:singleLine="false"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
        android:layout_below="@+id/img_opinion_response_like"
        android:layout_alignLeft="@+id/img_opinion_response_like"
        android:layout_alignStart="@+id/img_opinion_response_like" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_button_bg"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/str_opinion_response_send_your_opinion"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
        android:layout_below="@+id/editText"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText" />

    <ImageButton
        android:id="@+id/img_opinion_response_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_like"
        android:layout_below="@+id/txt_response_your_opinion_title"
        android:layout_alignLeft="@+id/txt_response_your_opinion_title"
        android:layout_alignStart="@+id/txt_response_your_opinion_title" />

    <ImageButton
        android:id="@+id/img_opinion_response_not_sure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_not_sure"
        android:layout_alignTop="@+id/img_opinion_response_do_not_like"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/img_opinion_response_do_not_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@drawable/selector_do_not_like"
        android:layout_below="@+id/txt_response_your_opinion_title"
        android:layout_alignRight="@+id/include"
        android:layout_alignEnd="@+id/include" />
</RelativeLayout>
