<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="2" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="1.2"
        android:gravity="center_vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/drawable_corner_rectangle"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/img_opinion_response_pending_list_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/shoe" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_opinion_response_pending_list_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jumba Shoes"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/txt_opinion_response_pending_list_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/txt_opinion_response_pending_list_item_view_selfie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/color_button_bg"
                android:drawableLeft="@drawable/camera"
                android:gravity="center"
                android:paddingEnd="5dp"
                android:paddingRight="5dp"
                android:paddingLeft="3dp"
                android:paddingStart="3dp"
                android:text="View Selfie"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:textColor="@android:color/black" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight=".8"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_opinion_response_given_list_item_pending_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/small_like" />

        <ImageView
            android:id="@+id/img_opinion_response_given_list_item_pending_not_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/small_not_sure" />

        <ImageView
            android:id="@+id/img_opinion_response_given_list_item_pending_do_not_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/small_do_not_like" />
    </LinearLayout>

</LinearLayout>