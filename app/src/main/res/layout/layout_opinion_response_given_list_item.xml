<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/img_opinion_response_given_list_item_given_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/like" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginStart="5dp"
        android:layout_toLeftOf="@+id/img_opinion_response_given_list_item_given_status"
        android:layout_toStartOf="@+id/img_opinion_response_given_list_item_given_status"
        android:gravity="center_vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/drawable_corner_rectangle"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/img_opinion_response_given_list_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/shoe" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_opinion_response_given_list_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jumba Shoes"
                android:ellipsize="end"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/txt_opinion_response_given_list_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_opinion_response_given_list_item_view_selfie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/color_button_bg"
                android:drawableLeft="@drawable/camera"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:paddingEnd="5dp"
                android:paddingLeft="3dp"
                android:paddingRight="5dp"
                android:paddingStart="3dp"
                android:paddingTop="2dp"
                android:text="View Selfie"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:textColor="@android:color/black" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>